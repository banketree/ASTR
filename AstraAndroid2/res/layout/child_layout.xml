<LinearLayout android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent" android:layout_height="45dip"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView android:id="@+id/ImageView01" android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_marginLeft="4dip"
				android:layout_marginTop="4dip"	 
                android:layout_gravity="top"/>
        <RelativeLayout android:paddingTop="2dip"
                android:paddingBottom="6dip" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:mode="twoLine">
                <TextView android:id="@+id/tvChild" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" 
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="8dip" 
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#d70000"
                        android:shadowRadius="1.5"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowColor="#cbcbcb" 
                         />
                <TextView android:id="@+id/tvChild2" 
                		android:layout_width="fill_parent"
                        android:layout_height="wrap_content" 
                        android:layout_below="@+id/tvChild"
                        android:layout_alignLeft="@+id/ImageView01"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="7dip"
                        android:textSize="11sp" 
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                <RatingBar android:id="@+id/ratingbar1"
                    android:layout_toLeftOf="@+id/button360"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:numStars="5"
			        android:rating="4.5"
			        android:layout_marginRight="20dip"
			        style="?android:attr/ratingBarStyleSmall" 
        		/>
			    <Button android:id="@+id/button360"
			           android:focusable="false"
			           android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			           android:layout_alignParentRight="true"
			           android:gravity="right"
			           android:text="360"
			           />        
        </RelativeLayout>
</LinearLayout>
